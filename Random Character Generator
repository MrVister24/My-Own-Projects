import random

level = random.randint(1,20)
print(f"Level {level}")

race = ["Dragonborn", "Dwarf", "Elf", "Gnome", "Hafling", "Half-orc", "Human", "Tiefling"]
outcome_race = random.choice(race)
print(outcome_race)

player = ["Artificer", "Bard", "Barbarian", "Cleric", "Druid", "Fighter", "Monk", "Paladin", "Ranger", "Rogue", "Sorcerer", "Wizard", "Warlock"]
outcome = random.choice(player)
print(outcome)

Artificer_Sub = ["Alchemist", "Armorer", "Artillerist", "Battlesmith"]
